<html>
<head>
    <style>
        #dd > div{
            color: #333333;
        }
        #dd > div:first-child{
            font-size: 30pt;
            color: #000000;
        }
    </style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>

    var aa = function(){
    $.ajax({
        url: '/pull',
        type: 'POST',
        data: JSON.stringify({
            data: "right"
        }),
        contentType: 'application/json',
        success: function (data) {

            var aaa = "";


            for(var i = data.length-1; i >= 0; i--){
                aaa += "<div>" + data[i] + "</div>";
            }

            console.log(aaa);

            document.getElementById("dd").innerHTML = aaa;
        }
    });
    }


    setInterval("aa()",1000);
</script>
</head>
<body>
<div id="dd" style="width: 100%; height: 100%;"></div>
</body>
</html>